{
    "name": "ELEC330 JetBot",

    "build": {
        "dockerfile": "./Dockerfile",
        "context": "..",
        "target": "base"
    },

    "runArgs": [
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",  // Comment this if using Wayland for display or not on Linux
        "--gpus", "all",
        "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"  // enables using a ptrace-based debugger like C++, Go, and Rust
    ],

    "containerEnv": {
        // "DISPLAY": "host.docker.internal:0"
        "DISPLAY": "${env:DISPLAY}",
        "GIT_EDITOR": "code --wait",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },

    "remoteUser": "elec330",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/elec330/ws/src,type=bind",
    "workspaceFolder": "/home/elec330/ws/src",

    // "postCreateCommand": "./.devcontainer/postCreateCommand.sh",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "tamasfe.even-better-toml",
                "serayuzgur.crates"
            ],
            "settings": {
                "files.watcherExclude": {
                    "**/target/**": true
                },
                // https://github.com/microsoft/vscode-remote-release/issues/1671
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": ["-l"]
                    }
                }
            }
        }
    }
}